&GLOBAL
  PROJECT mdinit-1-3
  RUN_TYPE MD
  PRINT_LEVEL MEDIUM
trace f
&END GLOBAL
&MOTION
  &MD
    ENSEMBLE NVE
    STEPS 2
    TIMESTEP 0.5
    TEMPERATURE 100
    INITIALIZATION_METHOD VIBRATIONAL 
    &INITIAL_VIBRATION
      VIB_EIGS_FILE_NAME mdinit-1-2-VIBRATIONS-1.eig
      PHASE 0.1
    &END INITIAL_VIBRATION
  &END MD
&END MOTION
&FORCE_EVAL
  METHOD QS
  &DFT
    BASIS_SET_FILE_NAME GTH_BASIS_SETS
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 120
    &END MGRID
    &QS
      METHOD GPW
      EPS_DEFAULT 1.0E-5
    &END QS
    &SCF
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &XC_FUNCTIONAL Pade
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 15 4 4
    &END CELL
    &COORD
    O   0.000000    0.000000   -0.065587
    H   0.000000   -0.757136    0.520545
    H   0.000000    0.757136    0.520545
    O   1.000000    0.000000   -0.065587
    H   1.000000   -0.757136    0.520545
    H   1.000000    0.757136    0.520545
    &END COORD
    &KIND H
      BASIS_SET dZVp-GTH
      POTENTIAL GTH-PADE-q1
    &END KIND
    &KIND O
      BASIS_SET dZVp-GTH
      POTENTIAL GTH-PADE-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
