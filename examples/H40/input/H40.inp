H            0.00000000           0.00000000          15.04800000 L1
H            0.00000000           0.00000000          16.72000000 L1
H            0.00000000           0.00000000          18.39200000 L1
    &END COORD

    &KIND H
      BASIS_SET ${basis_set_h}
      POTENTIAL ${potential_h}
    &END KIND
  &END SUBSYS
&END FORCE_EVAL

